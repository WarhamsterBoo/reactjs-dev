{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "shared": ["src/components/Shared/index"],
      "styles/*": ["src/styles/*"],
      "components/*": ["src/components/*"],
      "api/*": ["src/api/*"],
      "hoc/*": ["src/hoc/*"],
      "screens/*": ["src/screens/*"],
      "@/*": ["src/*"]
    },
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
  },
  "include": [
    "src/**/*",
  ],
}
